header.header
  div.page-container
    nav.navigation
      ul.navigation-list
        -if user_signed_in?
          li.navigation-list-item
            = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'navigation-link btn'
        -else
          li.navigation-list-item
            = link_to 'Sign In', new_user_session_path, class: 'navigation-link btn'
          li.navigation-list-item
            = link_to 'Sign Up', new_user_registration_path, class: 'navigation-link btn'
